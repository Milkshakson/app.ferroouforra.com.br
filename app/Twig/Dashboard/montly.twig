{% extends 'templateBase.twig' %}
{% block css %}
	{{parent()}}
	<link rel="stylesheet" href="\assets\css\dashboard.css?version={{versionScripts}}" rel="stylesheet">
{% endblock %}
{% block content %}
	<div class="summary-button-control card d-flex justify-content-between align-items-center flex-row">
		<a class='d-flex' title="Ano anterior" href='/dashboard/monthly/{{CIMesResumo.subMonths(1).format("m/Y")}}'>
			<i class='bx bx-skip-previous-circle'></i>
		</a>
		<div class="d-flex flex-1 card-title">Resumo do mês
			{{month}}/{{year}}</div>
		<a class='d-flex' title="Próximo mês" href='/dashboard/monthly/{{CIMesResumo.addMonths(1).format("m/Y")}}'>
			<i class='bx bx-skip-next-circle'></i>
		</a>
	</div>
	<div class='row'>
		{% for dia in monthlySumary %}
			<!-- Jogos Card -->
			{% set classTextProfit = (dia['countBuyIns']>0)? (dia['profit']>0?'text-success':'text-danger'):'' %}
			<div class="col-xxl-2 col-md-3 col-lg-3">
				<div class="card info-card sales-card">
					<div class="card-body">
						<h5 class="card-title  {{classTextProfit}}">Dia
							{{dia['day']}}<br/>
							<span>
								{{dia['dayWeekString']}}</span>
						</h5>
						<div class='row p-1'>
							{% if dia['countBuyIns']>0 %}
								{{box_bi('Registros',dia['countBuyIns'],'class="col-sm-6 col-md-6 col-lg-6 col-xxl-6 col-6"')}}
								{{box_bi('Lucro',dolarFormat(dia['profit']),'class="col-sm-6 col-md-6 col-lg-6 col-xxl-6 col-6"')}}
							{% else %}
								{{box_bi('Registros',dia['countBuyIns'],'class="col-sm-12 col-md-12 col-lg-12 col-xxl-12 col-6"')}}
								{{box_bi('','','class="col-sm-12 col-md-12 col-lg-12 col-xxl-12 col-6"')}}
							{% endif %}
						</div>
					</div>

				</div>
			</div>
			<!-- End Jogos Card -->
		{% endfor %}
	</div>
{% endblock %}

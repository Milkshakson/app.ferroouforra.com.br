{% set buyInList =session('openedSession')['buyInList'] %}
{% set summary =session('openedSession')['summary'] %}
{% if buyInList is empty %}
	{% set buyInList = [] %}
{% endif %}
{% set sitesJogados = [] %}
{% for bi  in buyInList %}
	{% set sitesJogados = sitesJogados|merge([bi['pokerSiteName']]) %}
{% endfor %}
{% set sitesJogados = array_unique(sitesJogados) %}
{% set distinctSites = count(sitesJogados) %}
{% set textSitesJogados = distinctSites ~ ((distinctSites > 1) ? ' sites' : " site") %}
{% if (summary['profit'] > 0) %}
	{% set classTextProfit = 'text-success' %}
{% elseif (summary['profit'] == 0) %}
	{% set classTextProfit = 'text-primary' %}
{% else %}
	{% set classTextProfit = 'text-danger'%}
{% endif %}
<div
	class='grid-container-cards-home mt-3 pt-3'>
	<!-- Jogos Card -->
	<div class="">
		<div class="card info-card sales-card">
			<div class="card-body">
				<h5 class="card-title">Jogos

				</h5>

				<div class="d-flex align-items-center">
					<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
						<i class="ri ri-grid-fill"></i>
					</div>
					<div class="ps-3">
						<h6>{{count(buyInList)}}</h6>
						<span class="text-muted small pt-2 ps-1">{{textSitesJogados}}</span>
					</div>
				</div>
			</div>

		</div>
	</div>
	<!-- End Jogos Card -->
	<!-- Profit Card -->
	<div class="">
		<div class="card info-card revenue-card">
			<div class="card-body">
				<h5 class="card-title">Lucro

				</h5>

				<div class="d-flex align-items-center">
					<div class="card-icon rounded-circle d-flex align-items-center justify-content-center {{classTextProfit}}">
						<i class="bi bi-currency-dollar"></i>
					</div>
					<div class="ps-3">
						<h6 class="{{classTextProfit}}">{{dolarFormat(summary['profit'])}}</h6>
						<span class="text-muted small pt-2 ps-1">Total de premiação:{{dolarFormat(summary['totalPrizes'])}}
						</span>
					</div>
				</div>
			</div>

		</div>
	</div>
	<!-- End Profit Card -->

	<!-- Prizes Card -->
	<div class="">
		<div class="card info-card revenue-card">
			<div class="card-body">
				<h5 class="card-title">Premiações

				</h5>

				<div class="d-flex align-items-center">
					<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
						<i class="bi bi-currency-dollar"></i>
					</div>
					<div class="ps-3">
						<h6>{{dolarFormat(summary['totalPrize'])}}</h6>
					</span>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- End Prizes Card -->

<!-- ABI Card -->
<div class="">
	<div class="card info-card revenue-card">
		<div class="card-body">
			<h5 class="card-title">ABI

			</h5>

			<div class="d-flex align-items-center">
				<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
					<i class="bi bi-currency-dollar"></i>
				</div>
				<div class="ps-3">
					<h6>{{dolarFormat(summary['avgBuyIn'])}}</h6>
					<span class="text-muted small pt-2 ps-1">Total de buy in:{{dolarFormat(summary['totalBuyIn'])}}
					</span>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- End ABI Card -->

<!-- ROI Card -->
<div class="">

	<div class="card info-card customers-card">
		<div class="card-body">
			<h5 class="card-title">ROI

			</h5>

			<div class="d-flex align-items-center">
				<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
					<i class="bi {{summary['percentageROI'] > 0 ? 'bi-box-arrow-up-right' : 'bi-box-arrow-down-left'}}"></i>
				</div>
				<div class="ps-3">
					<h6>{{percent(summary['percentageROI'])}}</h6>
				</div>
			</div>

		</div>
	</div>

</div>
<!-- End ROI Card -->


<header id="header" class="header fixed-top d-flex align-items-center">
	<div class="d-flex align-items-center justify-content-between">
		<a href="/" class="logo d-flex align-items-center">
			<img src="/assets/img/Logo.png"/>  
			{% if constant('ENVIRONMENT')=='production' %}
			
			{% elseif constant('ENVIRONMENT')=='development' %}
Ambiente de desenvolvimento
				{% elseif constant('ENVIRONMENT')=='testing' %}
Ambiente de testes
			{% endif %}
		</a>
		<i class="bi bi-list toggle-sidebar-btn"></i>
	</div>
	<!-- End Logo -->
		<!--  Searchbar -->
		<h5 class="card-title">
				<span>{{config('app').appName}}</span>
		</h5>
		<!-- End Search Bar -->
		<nav class="header-nav ms-auto">
			<ul class="d-flex align-items-center">
				{% if (session('isValidTokenAcesso')) %}
					<li class="nav-item dropdown">
						<a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
							<i class="bi bi-time-left-token bi-clock"></i>
							<span class="badge bg-light badge-number badge-time-left-token"></span>
						</a>
						<ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
							<li class="dropdown-header">
								<span class="badge-time-left-token-expanded"></span>
							</li>
						</ul>
					</li>
				
					<!-- End Messages Nav -->
					<li class="nav-item dropdown pe-3">
						<a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
							<i class="bi bi-person"></i>
							<span class="d-none d-md-block dropdown-toggle ps-2">
								{{session('usuarioTokenAcesso').sub }}</span>
						</a>
						<!-- End Profile Iamge Icon -->
						<ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
							<li class="dropdown-header">
								<h6>
									{{session('usuarioTokenAcesso').sub }}
								</h6>
								<span>{{session('usuarioTokenAcesso').environment }}</span>
							</li>
							<li>
								<hr class="dropdown-divider">
							</li>
							<li>
								<a class="dropdown-item d-flex align-items-center" href="login/logout">
									<i class="bi bi-box-arrow-right"></i>
									<span>Sair</span>
								</a>
							</li>
						</ul>
						<!-- End Profile Dropdown Items -->
					</li>
					<!-- End Profile Nav -->


				{% endif %}
			</ul>
		</nav>
	<!-- End Icons Navigation -->
</header>

{% if saldos and count(saldos) %}
	<div class="container mt-5">
		<div class="mt-3">
			<div class="d-flex flex-row justify-content-between">
				<div>
					<strong>Total Saldo Abertura:</strong>
					<span id="total-saldo-inicial">$0.00</span>
				</div>
			</div>
		</div>
		<table class="table table-bankroll">
			<colgroup>
				<col>
				<col style="width: 20%;">
				<col style="width: 20%;">
			</colgroup>
			<thead>
				<tr>
					<th class='d-flex flex-row'>Site

						<!-- Ícone flutuante no canto superior direito -->
						<div id="table-icon" class="floating-icon ms-2">
							<i class="bi bi-exclamation-circle text-warning"></i>
							<i class="bi bi-check-circle text-success"></i>
							<!-- Ícone Bootstrap Icons (substitua pelo ícone desejado) -->
						</div>
					</th>
					<th>Saldo Abertura</th>
				</tr>
			</thead>
			<tbody>
				{% for site in saldos %}
					<tr class="atualiza-saldos">
						<td>{{ site.nome_site }}</td>
						<td>
							<div class="input-group">
								<span class="input-group-text">$</span>
								<input type="text" class="form-control money-dolar saldo-inicial" value="{{ site.saldo_abertura }}" data-site="{{site.poker_site_id}}">
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3">
						<button id="salvar-btn" class="btn btn-primary">Salvar</button>
					</td>
				</tr>
			</tfoot>

		</table>
	</div>
{% else %}
	<div class="d-flex flex-column justify content-center align-items-center">
		<div class="text-center alert alert-warning w-100">Você não possui nenum site configurado para a regra de bankroll. Vá até a aba de seleção de sites para ajustar.</div>
	</div>
{% endif %}

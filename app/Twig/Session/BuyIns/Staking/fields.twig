<div class="d-flex gap-1  justify-content-start  p-1">
	<div class="d-flex flex-column justify-content-start align-items-start col-lg-4 col-sm-5">
		<label for="stakingSelling" class="form-label">% à venda</label>
		<div class="input-group has-validation">
			<input autocomplete="off" type="text" inputmode="numeric" name="stakingSelling" class="form-control percent-dot text-end" id="stakingSelling" value="{{set_value('stakingSelling', bi.stakingSelling)}}">
			<span class="input-group-text" id="IGPStakingSelling">
				<i data-bs-toggle="tooltip" title="Valor percentual" class="bi bi-percent"></i>
			</span>
		</div>
	</div>
	<div class='d-flex gap-1 flex-1  align-items-end px-1'>
		<span class="text-muted">Percentual que você pretende vender</span>
	</div>
</div>

<div class="d-flex gap-1 justify-content-start  p-1">
	<div class="d-flex flex-column justify-content-start align-items-start col-lg-4 col-sm-5">
		<label for="markup" class="form-label">Markup</label>
		<div class="input-group has-validation">
			<input autocomplete="off" type="text" inputmode="numeric" pattern="[0-9]+([\.][0-9]{0,2})?" name="markup" class="form-control markup" id="markup" value="{{set_value('markup', bi.markup)}}">
			<span class="input-group-text" id="IGPMarkup">
				<i data-bs-toggle="tooltip" title="Cafézinho" class="bx bx-coffee"></i>
			</span>
		</div>
	</div>
	<div class='d-flex gap-1 flex-1 align-items-end px-1'>
		<span class="text-muted">Percentual cobrado sobre cada cota vendida</span>
	</div>
</div>

<div class="d-flex gap-1 justify-content-start  p-1">
	<div class="d-flex flex-column justify-content-start align-items-start col-lg-4 col-sm-5">
		<label for="stakingSold" class="form-label">% vendido</label>
		<div class="input-group has-validation">
			<input autocomplete="off" type="text" inputmode="numeric" name="stakingSold" class="form-control percent-dot text-end" id="stakingSold" value="{{set_value('stakingSold', bi.stakingSold)}}">
			<span class="input-group-text" id="IGPStakingSold">
				<i data-bs-toggle="tooltip" title="Valor percentual" class="bi bi-percent"></i>
			</span>
		</div>
	</div>
	<div class='d-flex gap-1 flex-1 align-items-end px-1'>
		<span class="text-muted">Percentual que você conseguiu vender</span>
	</div>
</div>

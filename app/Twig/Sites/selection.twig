<div class="d-flex flex-column justify-content-center align-items-center p-3">
	<form class='h-100' id="form-sites-selecionados">
		<div class="site-grid h-100">
			{% for site in sites %}
				<div class="card border border-3 {{site.id_pessoa?'border-success':''}}  custom-pointer site-selector" data-id="{{ site.id }}">
					<div class="card-body p-0 m-0 d-flex flex-row">
						<div class="d-flex border bg-secondary">
							<img src="{{ getSiteSrcImage(site.name) }}" style="max-width: 40px;" class="img-fluid rounded-circle" alt="{{ site.shortName }}"/>
						</div>
						<div class="d-flex flex-row w-100 h-100 justify-content-center align-items-center gap-1">
							<div class="d-flex flex-row justify-content-between w-100">
								<div class="custom-control custom-checkboxd-flex flex-row w-100 h-100 justify-content-center align-items-center gap-3">
									<input type="checkbox" class="custom-control-input invisible" name="sites[]" id="site-{{ site.id }}" {{site.id_pessoa?'checked':''}} value="{{ site.id}}">
									<span>{{ site.name }}</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="d-flex flex-row justify-content-center align-items-center p-4 w-100">
			<button class='btn btn-primary btn-salvar-sites-selecionados'>Salvar sites selecionados</button>
		</div>
	</form>
</div>
